@import '~/variables.styl'
@import '~/quill-styles/snow.styl'
body
  margin: 0px
  transition: background-color transition-color
  background-color var(--bgcolor)
.no-transition
  transition: none !important
  *, ::before, ::after
    transition: none !important
p, h1, #note
  font-family: Rubik
  transition: color transition-color
  color: var(--color)
activeColor = #006edc
a
  color: activeColor
